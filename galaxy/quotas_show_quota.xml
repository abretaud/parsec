<?xml version="1.0"?>
<tool id="parsec.quotas.show_quota" name="quotas" version="1.0">
 <description>show_quota</description>
	<macros>
		<import>macros.xml</import>
	</macros>
	<expand macro="requirements"/>
	<command detect_errors="aggressive">
parsec quotas show_quota
"$quota_id"

#if $deleted:
  $deleted
#end if

| jq -S . > $results
</command>
	<inputs>
    <!-- arguments -->
	<param name="quota_id" label="quota_id" argument="quota_id" type="text" help="Encoded quota ID" />

    <!-- options -->
	<param name="deleted" label="deleted" argument="deleted" type="booelan" truevalue="--deleted" falsevalue="" help="Search for quota in list of ones already marked as deleted" />

	</inputs>
	<outputs>
		<data format="json" name="results"/>
	</outputs>
	<help>
Display information on a quota
	</help>
</tool>
