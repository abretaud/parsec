<?xml version="1.0"?>
<tool id="parsec.tools.install_dependencies" name="tools" version="1.0">
 <description>install_dependencies</description>
  <macros>
    <import>macros.xml</import>
  </macros>
  <expand macro="requirements"/>
  <command detect_errors="aggressive">
parsec tools install_dependencies
--tool_id "$tool_id"


| jq -S . > $results
</command>
  <inputs>
    <!-- arguments -->
    <input name="tool_id" label="tool_id" argument="tool_id"  type="text" help="id of the requested tool"/>

    <!-- options -->

  </inputs>
  <outputs>
    <data format="json" name="results"/>
  </outputs>
  <help>
Install dependencies for a given tool via a resolver. This works only for Conda currently. This functionality is available since Galaxy release_16.10 and is available only to Galaxy admins.
  </help>
</tool>
