<?xml version="1.0"?>
<tool id="parsec.histories.show_dataset_provenance" name="histories" version="1.0">
 <description>show_dataset_provenance</description>
	<macros>
		<import>macros.xml</import>
	</macros>
	<expand macro="requirements"/>
	<command detect_errors="aggressive">
parsec histories show_dataset_provenance
"$history_id"
"$dataset_id"

#if $follow:
  $follow
#end if

| jq -S . > $results
</command>
	<inputs>
    <!-- arguments -->
	<param name="history_id" label="History Id" argument="history_id" type="text" help="Encoded history ID" />
	<param name="dataset_id" label="Dataset Id" argument="dataset_id" type="text" help="Encoded dataset ID" />

    <!-- options -->
	<param name="follow" label="Follow" argument="follow" type="booelan" truevalue="--follow" falsevalue="" help="If ``follow`` is ``True``, recursively fetch dataset provenance information for all inputs and their inputs, etc..." />

	</inputs>
	<outputs>
		<data format="json" name="results"/>
	</outputs>
	<help>
Get details related to how dataset was created (``id``, ``job_id``, ``tool_id``, ``stdout``, ``stderr``, ``parameters``, ``inputs``, etc...).
	</help>
</tool>
