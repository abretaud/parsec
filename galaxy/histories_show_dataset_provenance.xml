<?xml version="1.0"?>
<tool id="parsec.histories.show_dataset_provenance" name="histories" version="1.0">
 <description>show_dataset_provenance</description>
  <macros>
    <import>macros.xml</import>
  </macros>
  <expand macro="requirements"/>
  <command detect_errors="aggressive">
parsec histories show_dataset_provenance
--history_id "$history_id"
--dataset_id "$dataset_id"

#if $follow
  --follow "$follow"
#end if

| jq -S . > $results
</command>
  <inputs>
    <!-- arguments -->
    <input name="history_id" label="history_id" argument="history_id"  type="text" help="Encoded history ID"/>
    <input name="dataset_id" label="dataset_id" argument="dataset_id"  type="text" help="Encoded dataset ID"/>

    <!-- options -->
    <input name="follow" argument="follow" type="boolean" truevalue="" falsevalue="" help="If ``follow`` is ``True``, recursively fetch dataset provenance information for all inputs and their inputs, etc..."/>

  </inputs>
  <outputs>
    <data format="json" name="results"/>
  </outputs>
  <help>
Get details related to how dataset was created (``id``, ``job_id``, ``tool_id``, ``stdout``, ``stderr``, ``parameters``, ``inputs``, etc...).
  </help>
</tool>
