<?xml version="1.0"?>
<tool id="parsec.genomes.show_genome" name="genomes" version="1.0">
 <description>show_genome</description>
	<macros>
		<import>macros.xml</import>
	</macros>
	<expand macro="requirements"/>
	<command detect_errors="aggressive">
parsec genomes show_genome
"$id"

#if $num:
  --num "$num"
#end if
#if $chrom:
  --chrom "$chrom"
#end if
#if $low:
  --low "$low"
#end if
#if $high:
  --high "$high"
#end if

| jq -S . > $results
</command>
	<inputs>
    <!-- arguments -->
	<param name="id" label="Id" argument="id" type="text" help="Genome build ID to use" />

    <!-- options -->
	<param name="num" label="Num" argument="num" type="text" help="num" />
	<param name="chrom" label="Chrom" argument="chrom" type="text" help="chrom" />
	<param name="low" label="Low" argument="low" type="text" help="low" />
	<param name="high" label="High" argument="high" type="text" help="high" />

	</inputs>
	<outputs>
		<data format="json" name="results"/>
	</outputs>
	<help>
Returns information about build <id>
	</help>
</tool>
