<?xml version="1.0"?>
<tool id="parsec.visual.show_visualization" name="visual" version="1.0">
 <description>show_visualization</description>
  <macros>
    <import>macros.xml</import>
  </macros>
  <expand macro="requirements"/>
  <command detect_errors="aggressive">
parsec visual show_visualization
--visual_id "$visual_id"


| jq -S . > $results
</command>
  <inputs>
    <!-- arguments -->
    <input name="visual_id" label="visual_id" argument="visual_id"  type="text" help="Encoded visualization ID"/>

    <!-- options -->

  </inputs>
  <outputs>
    <data format="json" name="results"/>
  </outputs>
  <help>
Get details of a given visualization.
  </help>
</tool>
