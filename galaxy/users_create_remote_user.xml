<?xml version="1.0"?>
<tool id="parsec.users.create_remote_user" name="users" version="1.0">
 <description>create_remote_user</description>
  <macros>
    <import>macros.xml</import>
  </macros>
  <expand macro="requirements"/>
  <command detect_errors="aggressive">
parsec users create_remote_user
--user_email "$user_email"


| jq -S . > $results
</command>
  <inputs>
    <!-- arguments -->
    <param name="user_email" label="user_email" argument="user_email"  type="text" help="email of the user to be created"/>

    <!-- options -->

  </inputs>
  <outputs>
    <data format="json" name="results"/>
  </outputs>
  <help>
Create a new Galaxy remote user.
  </help>
</tool>
