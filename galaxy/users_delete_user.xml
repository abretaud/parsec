<?xml version="1.0"?>
<tool id="parsec.users.delete_user" name="users" version="1.0">
 <description>delete_user</description>
	<macros>
		<import>macros.xml</import>
	</macros>
	<expand macro="requirements"/>
	<command detect_errors="aggressive">
parsec users delete_user
"$user_id"

#if $purge:
  $purge
#end if

| jq -S . > $results
</command>
	<inputs>
    <!-- arguments -->
	<param name="user_id" label="User Id" argument="user_id" type="text" help="encoded user ID" />

    <!-- options -->
	<param name="purge" label="Purge" argument="purge" type="booelan" truevalue="--purge" falsevalue="" help="if ``True``, also purge (permanently delete) the history" />

	</inputs>
	<outputs>
		<data format="json" name="results"/>
	</outputs>
	<help>
Delete a user.
	</help>
</tool>
