<?xml version="1.0"?>
<tool id="parsec.users.delete_user" name="users" version="1.0">
 <description>delete_user</description>
  <macros>
    <import>macros.xml</import>
  </macros>
  <expand macro="requirements"/>
  <command detect_errors="aggressive">
parsec users delete_user
--user_id "$user_id"

#if $purge
  --purge "$purge"
#end if

| jq -S . > $results
</command>
  <inputs>
    <!-- arguments -->
    <input name="user_id" label="user_id" argument="user_id"  type="text" help="encoded user ID"/>

    <!-- options -->
    <input name="purge" argument="purge" type="boolean" truevalue="" falsevalue="" help="if ``True``, also purge (permanently delete) the history"/>

  </inputs>
  <outputs>
    <data format="json" name="results"/>
  </outputs>
  <help>
Delete a user.
  </help>
</tool>
