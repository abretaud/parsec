<?xml version="1.0"?>
<tool id="parsec.histories.show_dataset_collection" name="histories" version="1.0">
 <description>show_dataset_collection</description>
	<macros>
		<import>macros.xml</import>
	</macros>
	<expand macro="requirements"/>
	<command detect_errors="aggressive">
parsec histories show_dataset_collection
"$history_id"
"$dataset_collection_id"


| jq -S . > $results
</command>
	<inputs>
    <!-- arguments -->
	<param name="history_id" label="history_id" argument="history_id" type="text" help="Encoded history ID" />
	<param name="dataset_collection_id" label="dataset_collection_id" argument="dataset_collection_id" type="text" help="Encoded dataset collection ID" />

    <!-- options -->

	</inputs>
	<outputs>
		<data format="json" name="results"/>
	</outputs>
	<help>
Get details about a given history dataset collection.
	</help>
</tool>
