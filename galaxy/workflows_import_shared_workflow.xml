<?xml version="1.0"?>
<tool id="parsec.workflows.import_shared_workflow" name="workflows" version="1.0">
 <description>import_shared_workflow</description>
	<macros>
		<import>macros.xml</import>
	</macros>
	<expand macro="requirements"/>
	<command detect_errors="aggressive">
parsec workflows import_shared_workflow
"$workflow_id"


| jq -S . > $results
</command>
	<inputs>
    <!-- arguments -->
	<param name="workflow_id" label="workflow_id" argument="workflow_id" type="text" help="Encoded workflow ID" />

    <!-- options -->

	</inputs>
	<outputs>
		<data format="json" name="results"/>
	</outputs>
	<help>
Imports a new workflow from the shared published workflows.
	</help>
</tool>
