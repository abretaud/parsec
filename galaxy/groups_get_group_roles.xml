<?xml version="1.0"?>
<tool id="parsec.groups.get_group_roles" name="groups" version="1.0">
 <description>get_group_roles</description>
	<macros>
		<import>macros.xml</import>
	</macros>
	<expand macro="requirements"/>
	<command detect_errors="aggressive">
parsec groups get_group_roles
"$group_id"


| jq -S . > $results
</command>
	<inputs>
    <!-- arguments -->
	<param name="group_id" label="Group Id" argument="group_id" type="text" help="Encoded group ID" />

    <!-- options -->

	</inputs>
	<outputs>
		<data format="json" name="results"/>
	</outputs>
	<help>
Get the list of roles associated to the given group.
	</help>
</tool>
