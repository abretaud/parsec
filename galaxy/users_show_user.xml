<?xml version="1.0"?>
<tool id="parsec.users.show_user" name="users" version="1.0">
 <description>show_user</description>
  <macros>
    <import>macros.xml</import>
  </macros>
  <expand macro="requirements"/>
  <command detect_errors="aggressive">
parsec users show_user
--user_id "$user_id"

#if $deleted
  --deleted "$deleted"
#end if

| jq -S . > $results
</command>
  <inputs>
    <!-- arguments -->
    <input name="user_id" label="user_id" argument="user_id"  type="text" help="encoded user ID"/>

    <!-- options -->
    <input name="deleted" argument="deleted" type="boolean" truevalue="" falsevalue="" help="whether to return results for a deleted user"/>

  </inputs>
  <outputs>
    <data format="json" name="results"/>
  </outputs>
  <help>
Display information about a user.
  </help>
</tool>
