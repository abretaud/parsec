<?xml version="1.0"?>
<tool id="parsec.histories.delete_dataset" name="histories" version="1.0">
 <description>delete_dataset</description>
	<macros>
		<import>macros.xml</import>
	</macros>
	<expand macro="requirements"/>
	<command detect_errors="aggressive">
parsec histories delete_dataset
"$history_id"
"$dataset_id"

#if $purge:
  $purge
#end if

| jq -S . > $results
</command>
	<inputs>
    <!-- arguments -->
	<param name="history_id" label="History Id" argument="history_id" type="text" help="Encoded history ID" />
	<param name="dataset_id" label="Dataset Id" argument="dataset_id" type="text" help="Encoded dataset ID" />

    <!-- options -->
	<param name="purge" label="Purge" argument="purge" type="booelan" truevalue="--purge" falsevalue="" help="if ``True``, also purge (permanently delete) the dataset" />

	</inputs>
	<outputs>
		<data format="json" name="results"/>
	</outputs>
	<help>
Mark corresponding dataset as deleted.
	</help>
</tool>
