<?xml version="1.0"?>
<tool id="parsec.workflows.show_workflow" name="workflows" version="1.0">
 <description>show_workflow</description>
	<macros>
		<import>macros.xml</import>
	</macros>
	<expand macro="requirements"/>
	<command detect_errors="aggressive">
parsec workflows show_workflow
"$workflow_id"


| jq -S . > $results
</command>
	<inputs>
    <!-- arguments -->
	<param name="workflow_id" label="Workflow Id" argument="workflow_id" type="text" help="Encoded workflow ID" />

    <!-- options -->

	</inputs>
	<outputs>
		<data format="json" name="results"/>
	</outputs>
	<help>
Display information needed to run a workflow.
	</help>
</tool>
