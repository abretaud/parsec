<?xml version="1.0"?>
<tool id="parsec.tool_data.delete_data_table" name="tool_data" version="1.0">
 <description>delete_data_table</description>
  <macros>
    <import>macros.xml</import>
  </macros>
  <expand macro="requirements"/>
  <command detect_errors="aggressive">
parsec tool_data delete_data_table
--data_table_id "$data_table_id"
--values "$values"


| jq -S . > $results
</command>
  <inputs>
    <!-- arguments -->
    <param name="data_table_id" label="data_table_id" argument="data_table_id"  type="text" help="ID of the data table"/>
    <param name="values" label="values" argument="values"  type="text" help="a "|" separated list of column contents, there must be a value for all the columns of the data table"/>

    <!-- options -->

  </inputs>
  <outputs>
    <data format="json" name="results"/>
  </outputs>
  <help>
Delete an item from a data table.
  </help>
</tool>
