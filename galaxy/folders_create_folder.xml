<?xml version="1.0"?>
<tool id="parsec.folders.create_folder" name="folders" version="1.0">
 <description>create_folder</description>
	<macros>
		<import>macros.xml</import>
	</macros>
	<expand macro="requirements"/>
	<command detect_errors="aggressive">
parsec folders create_folder
"$parent_folder_id"
"$name"

#if $description:
  --description "$description"
#end if

| jq -S . > $results
</command>
	<inputs>
    <!-- arguments -->
	<param name="parent_folder_id" label="Parent Folder Id" argument="parent_folder_id" type="text" help="Folder's description" />
	<param name="name" label="Name" argument="name" type="text" help="name of the new folder" />

    <!-- options -->
	<param name="description" label="Description" argument="description" type="text" help="folder's description" />

	</inputs>
	<outputs>
		<data format="json" name="results"/>
	</outputs>
	<help>
Create a folder.
	</help>
</tool>
