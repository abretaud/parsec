<?xml version="1.0"?>
<tool id="parsec.histories.create_dataset_collection" name="histories" version="1.0">
 <description>create_dataset_collection</description>
  <macros>
    <import>macros.xml</import>
  </macros>
  <expand macro="requirements"/>
  <command detect_errors="aggressive">
parsec histories create_dataset_collection
--history_id "$history_id"
--collection_description "$collection_description"


| jq -S . > $results
</command>
  <inputs>
    <!-- arguments -->
    <param name="history_id" label="history_id" argument="history_id"  type="text" help="Encoded history ID"/>
    <error />

    <!-- options -->

  </inputs>
  <outputs>
    <data format="json" name="results"/>
  </outputs>
  <help>
Create a new dataset collection
  </help>
</tool>
