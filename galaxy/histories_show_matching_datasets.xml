<?xml version="1.0"?>
<tool id="parsec.histories.show_matching_datasets" name="histories" version="1.0">
 <description>show_matching_datasets</description>
  <macros>
    <import>macros.xml</import>
  </macros>
  <expand macro="requirements"/>
  <command detect_errors="aggressive">
parsec histories show_matching_datasets
--history_id "$history_id"

#if $name_filter
  --name_filter "$name_filter"
#end if

| jq -S . > $results
</command>
  <inputs>
    <!-- arguments -->
    <input name="history_id" label="history_id" argument="history_id"  type="text" help="Encoded history ID"/>

    <!-- options -->
    <input name="name_filter" argument="name_filter" type="text" help="Only datasets whose name matches the ``name_filter`` regular expression will be returned; use plain strings for exact matches and None to match all datasets in the history"/>

  </inputs>
  <outputs>
    <data format="json" name="results"/>
  </outputs>
  <help>
Get dataset details for matching datasets within a history.
  </help>
</tool>
