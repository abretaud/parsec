<?xml version="1.0"?>
<tool id="parsec.workflows.show_invocation_step" name="workflows" version="1.0">
 <description>show_invocation_step</description>
	<macros>
		<import>macros.xml</import>
	</macros>
	<expand macro="requirements"/>
	<command detect_errors="aggressive">
parsec workflows show_invocation_step
"$workflow_id"
"$invocation_id"
"$step_id"


| jq -S . > $results
</command>
	<inputs>
    <!-- arguments -->
	<param name="workflow_id" label="Workflow Id" argument="workflow_id" type="text" help="Encoded workflow ID" />
	<param name="invocation_id" label="Invocation Id" argument="invocation_id" type="text" help="Encoded workflow invocation ID" />
	<param name="step_id" label="Step Id" argument="step_id" type="text" help="Encoded workflow invocation step ID" />

    <!-- options -->

	</inputs>
	<outputs>
		<data format="json" name="results"/>
	</outputs>
	<help>
See the details of a particular workflow invocation step.
	</help>
</tool>
