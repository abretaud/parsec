<?xml version="1.0"?>
<tool id="parsec.histories.create_history_tag" name="histories" version="1.0">
 <description>create_history_tag</description>
	<macros>
		<import>macros.xml</import>
	</macros>
	<expand macro="requirements"/>
	<command detect_errors="aggressive">
parsec histories create_history_tag
"$history_id"
"$tag"


| jq -S . > $results
</command>
	<inputs>
    <!-- arguments -->
	<param name="history_id" label="history_id" argument="history_id" type="text" help="Encoded history ID" />
	<param name="tag" label="tag" argument="tag" type="text" help="Add tag to history" />

    <!-- options -->

	</inputs>
	<outputs>
		<data format="json" name="results"/>
	</outputs>
	<help>
Create history tag
	</help>
</tool>
