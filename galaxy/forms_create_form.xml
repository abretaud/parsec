<?xml version="1.0"?>
<tool id="parsec.forms.create_form" name="forms" version="1.0">
 <description>create_form</description>
  <macros>
    <import>macros.xml</import>
  </macros>
  <expand macro="requirements"/>
  <command detect_errors="aggressive">
parsec forms create_form
--form_xml_text "$form_xml_text"


| jq -S . > $results
</command>
  <inputs>
    <!-- arguments -->
    <param name="form_xml_text" label="form_xml_text" argument="form_xml_text"  type="text" help="Form xml to create a form on galaxy instance"/>

    <!-- options -->

  </inputs>
  <outputs>
    <data format="json" name="results"/>
  </outputs>
  <help>
Create a new form.
  </help>
</tool>
