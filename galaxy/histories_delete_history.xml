<?xml version="1.0"?>
<tool id="parsec.histories.delete_history" name="histories" version="1.0">
 <description>delete_history</description>
  <macros>
    <import>macros.xml</import>
  </macros>
  <expand macro="requirements"/>
  <command detect_errors="aggressive">
parsec histories delete_history
--history_id "$history_id"

#if $purge
  --purge "$purge"
#end if

| jq -S . > $results
</command>
  <inputs>
    <!-- arguments -->
    <input name="history_id" label="history_id" argument="history_id"  type="text" help="Encoded history ID"/>

    <!-- options -->
    <input name="purge" argument="purge" type="boolean" truevalue="" falsevalue="" help="if ``True``, also purge (permanently delete) the history"/>

  </inputs>
  <outputs>
    <data format="json" name="results"/>
  </outputs>
  <help>
Delete a history.
  </help>
</tool>
